{
    "name": "obscuro",
    "displayName": "Obscuro",
    "description": "Securely encrypt and decrypt folders and files.",
    "repository": {
        "type": "git",
        "url": "https://github.com/shalom/obscuro.git"
    },
    "icon": "icon.png",
    "version": "2.2.2",
    "publisher": "ShalomP",
    "license": "MIT",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.obscuro-lock"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "obscuro.obscure",
                "title": "Obscure (Encrypt)"
            },
            {
                "command": "obscuro.reveal",
                "title": "Reveal (Decrypt)"
            },
            {
                "command": "obscuro.encryptSelection",
                "title": "Obscuro: Encrypt Selection"
            },
            {
                "command": "obscuro.decryptSelection",
                "title": "Obscuro: Decrypt Selection"
            },
            {
                "command": "obscuro.makeReadOnly",
                "title": "Obscuro: Lock Item (Read-Only)"
            },
            {
                "command": "obscuro.makeWritable",
                "title": "Obscuro: Unlock Item (Writeable)"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "obscuro.obscure",
                    "group": "modification",
                    "when": "resourceScheme == file && resourceExtname != .obscuro && resourceExtname != .obscuro-lock"
                },
                {
                    "command": "obscuro.reveal",
                    "group": "modification",
                    "when": "resourceScheme == file && resourceExtname == .obscuro"
                },
                {
                    "command": "obscuro.makeReadOnly",
                    "group": "modification",
                    "when": "resourceScheme == file && resourceExtname != .obscuro && resourceExtname != .obscuro-lock"
                },
                {
                    "command": "obscuro.makeWritable",
                    "group": "modification",
                    "when": "resourceScheme == file && resourceExtname != .obscuro-lock"
                }
            ],
            "editor/context": [
                {
                    "command": "obscuro.encryptSelection",
                    "group": "obscuro",
                    "when": "editorHasSelection"
                },
                {
                    "command": "obscuro.decryptSelection",
                    "group": "obscuro",
                    "when": "editorHasSelection"
                },
                {
                    "command": "obscuro.makeReadOnly",
                    "group": "obscuro",
                    "when": "resourceScheme == file"
                },
                {
                    "command": "obscuro.makeWritable",
                    "group": "obscuro",
                    "when": "resourceScheme == file"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@types/tar": "^6.1.13",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "tar": "^7.5.2"
    }
}